        <appender-ref ref="STDOUT" />
 
    </logger>
    <logger name="java.sql.PreparedStatement" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="STDOUT" />
 
    </logger>
	<root>
		<level value="INFO" />
		<appender-ref ref="ASYNCOUT" />
